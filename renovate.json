{
  "extends": [
    "config:base",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "automergeType": "pr"
    }
  ],
  "platformAutomerge": true,
  "platformCommit": true,
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "(^|/)zarf.yaml$"
      ],
      "matchStringsStrategy": "recursive",
      "matchStrings": [
        "charts:(.|\n)*?(^\\s{4}[\\w:]+|\n$|^\\s{2}-)",
        "- name: (?<depName>.+)(.|\n)*?url: (?<registryUrl>.+)(.|\n)*?version: (?<currentValue>.+)"
      ],
      "datasourceTemplate": "helm"
    }
  ]
}
