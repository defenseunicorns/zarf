{
	"name": "zarf-ui",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "API_DEV_PORT=5173 API_PORT=3333 API_TOKEN=insecure concurrently --names \"ui,api\" -c \"gray.bold,yellow\" \"vite dev\" \"nodemon -e go -x 'go run main.go dev ui -l=trace || exit 1'\"",
		"build": "vite build",
		"test": "playwright test -x --reporter github,html",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"nodemonConfig": {
		"delay": 5000,
		"watch": [
			"src"
		],
		"signal": "SIGKILL",
		"extensions": [
			"go"
		]
	},
	"devDependencies": {
		"@defense-unicorns/unicorn-ui": "0.0.18",
		"@fontsource/roboto": "4.5.8",
		"@material/card": "14.0.0",
		"@material/data-table": "14.0.0",
		"@material/layout-grid": "14.0.0",
		"@material/linear-progress": "14.0.0",
		"@material/theme": "14.0.0",
		"@playwright/test": "1.27.1",
		"@sveltejs/adapter-static": "next",
		"@sveltejs/kit": "next",
		"@sveltejs/package": "next",
		"@testing-library/svelte": "3.2.2",
		"@tsconfig/svelte": "3.0.0",
		"@types/prismjs": "1.26.0",
		"@typescript-eslint/eslint-plugin": "5.40.1",
		"@typescript-eslint/parser": "5.40.1",
		"concurrently": "7.4.0",
		"eslint": "8.25.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-svelte3": "4.0.0",
		"nodemon": "2.0.20",
		"playwright": "1.27.1",
		"prettier": "2.7.1",
		"prettier-plugin-svelte": "2.8.0",
		"prismjs": "1.29.0",
		"sanitize.css": "13.0.0",
		"sass": "1.55.0",
		"svelte": "3.52.0",
		"svelte-check": "2.9.2",
		"svelte-preprocess": "4.10.7",
		"tslib": "2.4.0",
		"typescript": "4.8.4"
	},
	"dependencies": {
		"material-symbols": "0.2.13",
		"typescript": "4.8.4",
		"vite": "3.1.8",
		"yaml": "2.1.3"
	}
}
